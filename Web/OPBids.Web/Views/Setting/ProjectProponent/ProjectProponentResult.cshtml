@model IEnumerable<OPBids.Entities.View.Setting.ProjectProponentVM>
@Scripts.Render("~/bundles/projectpropScript")
<script type="text/javascript">
    Site.FillPagingValues(@ViewBag.page_count, @(ViewBag.page_reset == true ? 1 : 0));
</script>
<div class="p-view-result">
    <table id="grdLst" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Item #</th>
                <th scope="col">@Html.DisplayNameFor(m => m.proponent_name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.proponent_designation)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.dept_id)</th>
                <th scope="col" hidden>@Html.DisplayNameFor(m => m.proponent_emailadd)</th>
                <th scope="col" hidden>@Html.DisplayNameFor(m => m.proponent_contactno)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.status)</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                <tr id="row-@item.id">
                    <td><input type="checkbox" class="check-selected" itemid="@item.id" /><span class="incrementalNum"></span></td>
                    <td proponent_name>
                        @Html.DisplayFor(modelItem => item.proponent_name)
                    </td>
                    <td proponent_designation>
                        @Html.DisplayFor(modelItem => item.proponent_designation)
                    </td>
                    <td dept_id>
                        @Html.DisplayFor(modelItem => item.dept_id)
                    </td>
                    <td proponent_emailadd hidden>
                        @Html.DisplayFor(modelItem => item.proponent_emailadd)
                    </td>
                    <td proponent_contactno hidden>
                        @Html.DisplayFor(modelItem => item.proponent_contactno)
                    </td>
                    <td status statusid="@Html.DisplayFor(modelItem => item.status)"></td>
                    <td>
                        @{Html.RenderPartial("~/Views/Setting/ProjectProponent/ProjectProponentTools.cshtml", null, new ViewDataDictionary { { "item_id", item.id }, { "item_name", item.proponent_name }, { "item_status", item.status } });}
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script type="text/javascript">Site.PopulateSequence()</script>
</div>
<div data-backdrop="static" class="modal fade" id="saveModal" tabindex="-1" role="dialog" aria-labelledby="saveModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close glyphicon glyphicon-remove-circle" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" style="font-weight:bold;"><span id="processId"></span> <span class="moduleCaption"></span></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="col-md-3 text-right"><label for="u_proponent_name" class="control-label">@Html.DisplayNameFor(m => m.proponent_name)</label>:</div>
                        <div class="col-md-9"><textarea placeholder="Enter proponent name here..." type="text" id="u_proponent_name" class="form-control" maxlength="250" required caption="@Html.DisplayNameFor(m => m.proponent_name)" /></div>
                        <br />
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right"><label for="u_proponent_designation" class="control-label">@Html.DisplayNameFor(m => m.proponent_designation)</label>:</div>
                        <div class="col-md-9"><textarea placeholder="Enter designation here..." id="u_proponent_designation" class="form-control" maxlength="75" rows="3" required caption="@Html.DisplayNameFor(m => m.proponent_designation)" ></textarea></div>
                    </div>
                  <br />
                    <div class="form-group">
                        <div class="col-md-3 text-right"><label for="u_dept_id" class="control-label">@Html.DisplayNameFor(m => m.dept_id)</label>:</div>
                        <div class="col-md-9"><input placeholder="Enter department id here..." type="text" id="u_dept_id" class="form-control" maxlength="1" required caption="@Html.DisplayNameFor(m => m.dept_id)" /></div>
                    </div>
                     <div class="form-group">
                        <div class="col-md-3 text-right"><label for="u_proponent_emailadd" class="control-label">@Html.DisplayNameFor(m => m.proponent_emailadd)</label>:</div>
                        <div class="col-md-9"><input placeholder="Enter proponent email here..." type="text" id="u_proponent_emailadd" class="form-control" maxlength="75" required caption="@Html.DisplayNameFor(m => m.proponent_emailadd)" /></div>
                    
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right"><label for="u_proponent_contactno" class="control-label">@Html.DisplayNameFor(m => m.proponent_contactno)</label>:</div>
                        <div class="col-md-9"><input placeholder="Enter proponent contact no. here..." type="text" id="u_proponent_contactno" class="form-control" maxlength="75" required caption="@Html.DisplayNameFor(m => m.proponent_contactno)" /></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer dialogFooter">
                <button type="button" id="btnCancel" class="ui-button ui-corner-all ui-widget negativeDialogButton" data-dismiss="modal"><span style="position:relative;left:-5px;"></span>&nbsp;Cancel</button>
                <button type="button" id="btnSave" class="ui-button ui-corner-all ui-widget positiveDialogButton"><span style="position:relative;left:-5px;"></span>&nbsp;Save</button>
            </div>
        </div>
    </div>
</div>
