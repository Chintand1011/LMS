<style>
    .table-batch-main {
        width: 100%;
    }
    #table_batch_summary {
        margin: 20px;
        font-size: 16px;
    }
    #table_batch_list {
        font-size: 11px;
    }

</style>
<div class="table_batch_summary">
    <div class="row">
        <div class="col-md-3 text-right"><label class="control-label">Number of Projects :</label></div>
        <div class="col-md-2"><span id="batch_total_projects" class="control-value"></span></div>
        <div class="col-md-4 text-right"><label class="control-label">Total Amount : </label></div>
        <div class="col-md-3"><span class="control-value"><span class="font-green"><b>₱ <span id="batch_total_amount"></span></b></span></span></div>
    </div>
    <div class="row">
        <div class="col-md-3 text-right"><label class="control-label">Date Created : </label></div>
        <div class="col-md-3"><span id="batch_date_created" class="control-value"></span></div>
    </div>
</div>
<div style="min-height: 200px">
    <table id="table_batch_list" class="table table-striped table-batch-main">
        <thead>
            <tr>
                <th scope="col" width="5%" class="text-center">Item #</th>
                <th scope="col" width="6%" class="text-center">Ref #</th>
                <th scope="col" width="17%">Category</th>
                <th scope="col" width="30%">Project Title</th>
                <th scope="col" width="15%">Requested By</th>
                <th scope="col" width="15%">Grantee</th>
                <th scope="col" width="10%" class="align-right">Amount</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
