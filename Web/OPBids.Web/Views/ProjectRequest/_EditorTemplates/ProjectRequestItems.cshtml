<div id="projectRequestItems" class="col-lg-12 col-md-12 col-sm-12">
    <div id="addRemoveToolbar">
        <a class="toolbar-add" href="#">
            <img src="~/Content/images/icon-add.png" />
            <span id="toolbar-add-text" style="color: forestgreen">Add Item</span>
        </a>
        <a class="toolbar-delete" href="#">
            <img src="~/Content/images/icon-trash.png" />
            <span id="toolbar-delete-text" style="color: darkred">Remove Selected Items</span>
        </a>
    </div>
    <div class="scroller" style="overflow-y:auto; height:360px; margin-top:10px">
        <table id="projectItems" class="project-items table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="width:40px">Item</th>
                    <th scope="col" style="width:30px">#</th>
                    <th scope="col" style="width:80px">Unit</th>
                    <th scope="col">Item Description</th>
                    <th scope="col" style="width:80px">Quantity</th>
                    <th scope="col" style="width:150px">Unit Cost</th>
                    <th scope="col" style="width:150px">Total Cost</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="text-right" style="font-weight:bold; padding-right: 20px; padding-top:8px">
        Grand Total <span style="color:#2AB106">₱ <span class="units-grand-total">0.00</span></span>
    </div>
</div>
<script type="text/javascript">
	Site.DrawWaterMark("#projectRequestItems", "confidential-img.bmp");
    var ProjReqItems = {
        Enable: function () {
            $("#projectRequestItems .form-control:not('.total')").removeAttr("readonly");
            $("#projectRequestItems input[type=checkbox]").removeAttr("disabled");
            $("#projectRequestItems div.scroller").height("360px");
            $("#projectRequestItems #addRemoveToolbar").show();
        },
        Disable: function () {
            $("#projectRequestItems .form-control").attr("readonly", "readonly");
            $("#projectRequestItems input[type=checkbox]").attr("disabled", "disabled");
            $("#projectRequestItems div.scroller").height("390px");
            $("#projectRequestItems #addRemoveToolbar").hide();
        }
    };    
</script>